@{
    ViewBag.Title = "身份证管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
    <div class="lr-form-wrap" id="form">
        <div class="col-xs-12 lr-form-item" data-table="tc_IDCard" style="display: none; ">
            <div class="lr-form-item-title">Id</div>
            <input id="F_PersonId" type="text" class="form-control" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard" >
            <div class="lr-form-item-title">姓名</div>
            <input id="F_UserName" type="text" class="form-control" disabled />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard" >
            <div class="lr-form-item-title">身份证号码</div>
            <input id="F_IDCardNo" type="text" class="form-control" disabled />
        </div>

        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard">
            <div class="lr-form-item-title">身份证发证日<font face="宋体">*</font></div>
            <input id="F_IssueDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_IssueDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard">
            <div class="lr-form-item-title">身份证失效日<font face="宋体">*</font></div>
            <input id="F_ExpirationDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_ExpirationDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard">
            <div class="lr-form-item-title">身份证保管方式<font face="宋体">*</font></div>
            <div id="F_SafeguardType" isvalid="yes" checkexpession="NotNull"></div>
        </div>
        <div class="col-xs-6 lr-form-item" data-table="tc_IDCard">
            <div class="lr-form-item-title">入库登记日<font face="宋体">*</font></div>
            <input id="F_WarehouseDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#F_WarehouseDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
        </div>
        <div class="col-xs-12 lr-form-item" data-table="tc_IDCard">
            <div class="lr-form-item-title">备注<font face="宋体">*</font></div>
            <textarea id="F_Description" class="form-control" style="height:100px;" isvalid="yes" checkexpession="NotNull"></textarea>
        </div>
    </div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/IDCard/Form.js")
