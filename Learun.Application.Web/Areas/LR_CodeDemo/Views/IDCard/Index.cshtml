@{
    ViewBag.Title = "身份证管理";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style type="text/css">
    .lr-tree {
        position: relative;
        width: 100%;
        height: 94%;
    }
</style>
<div class="lr-layout lr-layout-left-center" id="lr_layout">
    <div class="lr-layout-left">
        <div class="lr-layout-wrap">
            <div class="lr-layout-title lrlg ">人员信息</div>
            <div class="lr-layout-wrap">
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <input id="txt_BuildKeyword" type="text" class="form-control" style="width:100px" placeholder="查询关键字" />
                    </div>
                    <div class="lr-layout-tool-item">
                        <a id="btn_BuildSearch" class="btn btn-primary btn-sm"><i class="fa fa-search"></i>&nbsp;<span class="lrlg">查询</span></a>
                    </div>
                    <div id="dataTree" class="lr-layout-body lr-tree"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="lr-layout-center">
        <div class="lr-layout-wrap  ">
            <div class="lr-layout-title">
                <span id="titleinfo" class="lrlg">身份证信息</span>
            </div>
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="lr-query-formcontent">
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">姓名</div>
                                    <input id="F_UserName" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">身份证号码</div>
                                    <input id="F_IDCardNo" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">SFZ保管方式</div>
                                    <div id="F_SafeguardType"></div>
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">SFZ发证日</div>
                                    <input id="F_IssueDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ realDateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_IssueDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">SFZ失效日</div>
                                    <input id="F_ExpirationDate" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ realDateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#F_ExpirationDate').trigger('change'); } })" isvalid="yes" checkexpession="NotNull" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" learun-authorize="yes">
                        <a id="lr_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr_print" class="btn btn-default"><i class="fa fa-print"></i>&nbsp;打印</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/IDCard/Index.js")
