@{
    ViewBag.Title = "从业经历";
    Layout = "~/Views/Shared/_Index.cshtml";
}


<style type="text/css">
    .lr-form-item-title {
        width: 95px;
    }

    .lr-form-item {
        padding: 6px 0 5px 95px;
    }
</style>


<div class="lr-layout lr-layout-left-center" id="lr_layout">
    <div class="lr-layout-left">
        <div class="lr-layout-wrap">
            <div class="lr-layout-title lrlg ">人员信息</div>
            <div id="dataTree" class="lr-layout-body"></div>
        </div>
    </div>
    <div class="lr-layout-center">
        <div class="lr-layout-wrap">
            <div class="lr-layout-title">
                <span id="titleinfo" class="lrlg">从业信息</span>
            </div>
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="lr-query-formcontent">

                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">姓名</div>
                                    <input id="F_UserName" type="text" class="form-control" />
                                </div>

                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">身份证号</div>
                                    <input id="F_IDCardNo" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">从从业单位名称</div>
                                    <input id="F_CompanyName" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">就职类型</div>
                                    <div id="F_VocationType"></div>
                                </div>
                                <div class="col-xs-12 lr-form-item">
                                    <div class="lr-form-item-title">就职证书名称</div>
                                    <div id="F_CertType"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" learun-authorize="yes">
                        <a id="lr_add" class="btn btn-default"><i class="fa fa-plus"></i>&nbsp;新增</a>
                        <a id="lr_edit" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                        <a id="lr_delete" class="btn btn-default"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
                        <a id="lr_print" class="btn btn-default"><i class="fa fa-print"></i>&nbsp;打印</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_CodeDemo/Views/WorkExperience/Index.js")
